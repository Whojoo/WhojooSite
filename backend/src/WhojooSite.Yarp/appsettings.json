{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Yarp": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "recipes": {
        "ClusterId": "backendCluster",
        "Match": {
          "Path": "/api/recipes/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "web": {
        "ClusterId": "webCluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "webCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://web"
          }
        }
      },
      "backendCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://sjaak"
          }
        }
      }
    }
  }
}